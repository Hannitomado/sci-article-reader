# === Core ===
ENV=dev
LOG_LEVEL=INFO

# === Backend Networking ===
UVICORN_HOST=127.0.0.1
UVICORN_PORT=8080

# === CORS / Frontend ===
# Comma-separated list; include frontend dev URL & any deployment domains
CORS_ORIGINS=http://localhost:3000

# === Storage Paths (relative to repo root unless absolute) ===
AUDIO_OUT_DIR=static
CLEANED_DIR=cleaned
UPLOAD_TMP_DIR=tmp

# Max upload in MB (backend will reject larger)
MAX_UPLOAD_MB=20

# === Redis / Celery ===
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=
CELERY_RESULT_BACKEND=
CELERY_TASK_DEFAULT_QUEUE=audio
CELERY_CONCURRENCY=2
CELERY_TASK_TIME_LIMIT_SEC=600
CELERY_TASK_SOFT_TIME_LIMIT_SEC=540

# === OpenAI / TTS ===
OPENAI_API_KEY=YOUR_KEY_HERE
TTS_MODEL=openai/tts-1
TTS_VOICE=alloy
TTS_FORMAT=wav
TTS_SAMPLE_RATE=22050
